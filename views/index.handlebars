<h1 id="title">Eat Da Burger !</h1>

{{!-- <div id="container"> --}}

<div id="burger-options">
    <div class="row">
        <div class="col-3 text-left">
            <h2 class="subtitles">Burger Options</h2>
            <form id="eatburger" class="button-size">
                {{#each burgers}}
                {{#unless burgereaten}}

                <div class="card">
                    <div class="card-body">
                        <option value="{{this.id}}">{{this.burger}}</option><br>
                    </div>
                </div>

                <button type="submit" id="eat-button">Eat Burger !</button>
                {{/unless}}
                {{/each}}
        </div>

        <div id="create-box">
            <div class="row">
                <div class="col-12">
                    <h2 class="subtitles">Create a Burger</h2>
                    <form id="createburger" class="button-size">
                        <textarea type="text" name="burger" id="text-box"
                            placeholder="Put your burger order in here!"></textarea><br>
                        <button type="submit" id="create-button">Give me my burger !</button>
                    </form>
                </div>
            </div>
        </div>


        </form>
    </div>
</div>
{{!-- </div> --}}
<script type="text/javascript">

    $("#createburger").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();

        // [name=burger] will find an element with a "name" attribute equal to the string "burger"
        var newBurger = {
            burger: $("#createburger [name=burger]").val().trim()
        };

        // Send the POST request.
        $.ajax("/api/burgers", {
            type: "POST",
            data: newBurger
        }).then(
            function () {
                console.log("created new burger");
                // Reload the page to get the updated list
                location.reload();
            }
        );
    });

    $("#eatburger").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();

        // Get the ID by finding an element with a "name" attribute equal to the string "id"
        var id = $("[name=id]").val().trim();

        // Send the PUT request.
        $.ajax("/api/burger/" + id, {
            type: "PUT",
            data: { eatBurger: true }
        }).then(
            function () {
                console.log("updated id ", id);
                // Reload the page to get the updated list
                location.reload();
            }
        );
    });

    $("#burgereaten").on("submit", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();

        // Get the ID by finding an element with a "name" attribute equal to the string "id"
        var id = $("[name=id]").val().trim();

        // Send the DELETE request.
        $.ajax("/api/burger/" + id, {
            type: "DELETE",
        }).then(
            function () {
                console.log("updated id ", id);
                // Reload the page to get the updated list
                location.reload();
            }
        );
    });
</script>